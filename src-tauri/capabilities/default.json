{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier":"fs:allow-exists",
      "allow": [
        "$APPLOCALDATA/**",
        "$APPDATA/**"
      ]
    },
    {
      "identifier":"fs:allow-create",
      "allow": [
        "$APPLOCALDATA/**",
        "$APPDATA/**"
      ]
    },
    {
      "identifier":"fs:allow-write",
      "allow": [
        "$APPLOCALDATA/**",
        "$APPDATA/**"
      ]
    },
    {
      "identifier":"fs:allow-read",
      "allow": [
        "$APPLOCALDATA/**",
        "$APPDATA/**"
      ]
    },
    {
      "identifier":"fs:allow-watch",
      "allow": [
        "$APPLOCALDATA/**",
        "$APPDATA/**"
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        "$APPLOCALDATA/**",
        "$APPDATA/**"
      ]
    },
    "log:default",
    "dialog:default"
  ]
}