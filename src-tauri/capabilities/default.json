{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "fs:scope",
      "permissions": [
        "fs:scope:app",
        "$APPLOCALDATA/**",
        "$RESOURCE/**",
        "$APPDATA/**"
      ]
    },
    "fs:allow-exists",
    "fs:allow-create",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-watch",
    "log:default",
    "dialog:default"
  ]
}